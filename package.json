{
  "name": "@ocavue/eslint-config",
  "type": "module",
  "version": "3.6.1",
  "packageManager": "pnpm@10.22.0",
  "description": "Opinionated ESLint config preset",
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/ocavue",
  "homepage": "https://github.com/ocavue/eslint-config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ocavue/eslint-config.git"
  },
  "bugs": "https://github.com/ocavue/eslint-config/issues",
  "keywords": [
    "eslint",
    "eslint-config",
    "typescript",
    "markdown",
    "react",
    "vue"
  ],
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "check": "prettier --check .",
    "fix": "eslint --fix . && prettier --write .",
    "lint": "eslint .",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@eslint/js": "^9.38.0",
    "@eslint/markdown": "^7.4.1",
    "@unocss/eslint-config": "^66.5.4",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-antfu": "^3.1.1",
    "eslint-plugin-command": "^3.3.1",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-package-json": "^0.85.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.47.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "devDependencies": {
    "@ocavue/tsconfig": "^0.6.1",
    "@types/node": "^20.17.9",
    "@typescript-eslint/utils": "^8.47.0",
    "eslint": "^9.38.0",
    "jiti": "^2.6.1",
    "pkg-pr-new": "^0.0.60",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "renovate": {
    "extends": [
      "github>ocavue/config-renovate"
    ],
    "packageRules": [
      {
        "matchPackageNames": [
          "eslint-plugin-react-hooks"
        ],
        "allowedVersions": "!/6.0.0-rc1$/"
      }
    ]
  }
}
